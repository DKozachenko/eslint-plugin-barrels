{
  "compilerOptions": {
    "outDir": "dist/lib",
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "pretty": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": false,
  },
}
